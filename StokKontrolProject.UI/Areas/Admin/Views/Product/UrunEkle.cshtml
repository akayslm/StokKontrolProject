@using StokKontrolProject.Entities.Entities
@{
    ViewData["Title"] = "UrunEkle";
}

@model Product

<div class="row">
    <div class="offset-3 col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Urun Ekle</strong>
            </div>
            <div class="card-body">
                <!-- Credit Card -->
                <div id="pay-invoice">
                    <div class="card-body">
                       
                        <form asp-area="Admin" asp-controller="Product" asp-action="UrunEkle" method="post" novalidate="novalidate">
                           
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label mb-1">Ürün Adı</label>
                                <input asp-for="ProductName" type="text" class="form-control">
                            </div>
                            <div class="form-group has-success">
                                <label asp-for="UnitPrice" class="control-label mb-1">Fiyatı</label>
                                <input asp-for="UnitPrice" type="text" class="form-control">                               
                            </div>
                            <div class="form-group has-success">
                                <label asp-for="Stock" class="control-label mb-1">Stok Adedi</label>
                                <input asp-for="Stock" type="text" class="form-control">                               
                            </div>
                            <div class="form-group has-success">
                                <label asp-for="ExpireDate" class="control-label mb-1">Son Kullanma Tarihi</label>
                                <input asp-for="ExpireDate" type="text" class="form-control">                               
                            </div>
                            <div class="form-group has-success">
                                <label asp-for="CategoryID" class="control-label mb-1">Kategori</label>
                                <input asp-for="CategoryID" type="text" class="form-control"> 
                                <select asp-for="CategoryID" asp-items="@ViewBag.AktifKategoriler">
                                    <option>Lütfen Kategori Seçiniz...</option>
                                </select>
                            </div>
                            <div class="form-group has-success">
                                <label asp-for="SupplierID" class="control-label mb-1">Tedarikçi</label>
                                <input asp-for="SupplierID" type="text" class="form-control"> 
                                <select asp-for="SupplierID" asp-items="@ViewBag.AktifTedarikciler">
                                    <option>Lütfen Tedarikçi Seçiniz...</option>
                                </select>
                            </div>
                            <div>
                                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                    <i class="fa fa-plus-square-o"></i>&nbsp;
                                    <span id="payment-button-amount">Urun Ekle</span>
                                    <span id="payment-button-sending" style="display:none;">Ekleniyor…</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div> <!-- .card -->

    </div><!--/.col-->
</div>

